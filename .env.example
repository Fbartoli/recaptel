# Telegram API credentials (from my.telegram.org)
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here

# Telegram Bot for sending digests
TELEGRAM_BOT_TOKEN=PASTE_BOT_TOKEN_HERE
TELEGRAM_DIGEST_CHAT_ID=PASTE_CHAT_ID_HERE

# LLM Configuration (OpenRouter by default, works with Claude)
LLM_BASE_URL=https://openrouter.ai/api/v1
LLM_API_KEY=PASTE_OPENROUTER_API_KEY_HERE
LLM_MODEL=openrouter/auto

# OpenRouter optional headers (for attribution/analytics)
# OPENROUTER_SITE_URL=https://your-site.com
# OPENROUTER_APP_NAME=RecapTel

# Schedule Settings
TIMEZONE=UTC
DIGEST_HOUR_LOCAL=9

# Chat Filters (comma-separated, optional)
CHAT_ALLOWLIST=
CHAT_BLOCKLIST=

# Ingest Limits (optional, tune for large accounts)
INGEST_DIALOG_LIMIT=500
INGEST_MESSAGES_PER_CHAT=500

# Storage Paths (optional, defaults shown)
DB_PATH=data/recaptel.db
TDLIB_DATA_DIR=data/tdlib
